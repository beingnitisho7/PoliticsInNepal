<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/informationRow"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="50dp"
                android:layout_weight="0"
                android:layout_height="50dp"
                android:id="@+id/partyLogo"
                />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/forName"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textSize="20dp"
            android:text="Nepal Communist Party"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/partyName"
            />
        </LinearLayout>
         <LinearLayout
             android:layout_below="@+id/forName"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

         <TextView
             android:id="@+id/estDate"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="Established Date:"
             />

             <TextView
                 android:id="@+id/extraImfo"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:text="Extra Info:"
                 />
         </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>